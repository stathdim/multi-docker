{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "stathisdim/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "stathisdim/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "stathisdim/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "stathisdim/multi-nginx",
      "essential": true,
      "portMappings": [
      {
        "hostPort": 80,
        "containerPort": 80
      }
      ],
      "links": ["server", "client"]
    }
  ]
}